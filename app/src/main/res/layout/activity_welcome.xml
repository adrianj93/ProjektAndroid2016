<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.adrian.projekt2016.WelcomeActivity"
        android:fitsSystemWindows="true"
        android:background="@color/md_blue_600">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Witaj!"
                android:textColor="@color/md_white_1000"
                android:allowUndo="false"
                android:textSize="65dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Podaj swoje imiÄ™"
                android:textColor="@color/md_white_1000"
                android:allowUndo="false"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_margin="15dp"
                android:layout_marginTop="30dp" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/EditText_White"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:id="@+id/edittext_name"
                android:textColor="@color/md_white_1000" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_arrow_forward_white_48dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>
